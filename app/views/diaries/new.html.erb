<h1>Create a new diary</h1>
<form method="post" action="/diaries">
  <p>
    <div><label for="title">Title</label></div>
    <input type="text" name="title" id="title" />
  </p>
  <p>
    <div><label for="day">Day</label></div>
    <input type="datetime" name="day" id="mood" />
  </p>

  <input type="submit" value="Create Diary"/>
</form>
